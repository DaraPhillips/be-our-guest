    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/be_our_guest_website/manage.py",
            "django": true,
            "console": "integratedTerminal",
            "args": [
                "runserver"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "React",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/react"
        }
    ]
}